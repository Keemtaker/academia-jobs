<%= render partial: "jobs/partials/new/pricing" %>

<%= simple_form_for @job, html: { class: 'form-horizontal' },wrapper: :horizontal_form do |f| %>
  <div class="container">
    <br>
    <h1 id="get-started">Job Details</h1>
    <br>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :employer,  :label => "Name of Academic Institution" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :email,  :label => "Contact Email", placeholder: "Stays Private. We will send a confirmation email here" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :title,  :label => "Job title" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :description, as: :rich_text_area, :label => "Job Description" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :city, :label => "Job location", placeholder: "What city is the job located" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :country, :label => "Country" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :address, :label => "Address" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :job_type, collection: ["Phd", "Postdoc", "Lecturer", "Professor", "Associate Professor", "Researcher", "Assistant Researcher", "Tenure Track", "Engineer", "Management", "Consultant", "Other"], :label => "Job Type" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :job_field, collection: ["Agricultural Science", "Anthropology", "Architecture and Design", "Arts and Culture", "Biology", "Business and Economics", "Chemistry",
          "Computer Science", "Education", "Engineering", "Geosciences", "History", "Law", "Linguistics", "Literature", "Mathematics", "Medicine", "Philosophy",
          "Physics", "Political Science", "Psychology", "Social Science", "Space Science", "Theology", "Other"], :label => "Job Field" %>
      </div>
    </div>

    <div class="form-group form-group--inactive show-job-url">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :job_application_url, :label => "Application Url", placeholder: "Applicants will go to the URL you specify to apply for this job." %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :logo, input_html: { class: 'd-none', id: 'logo-input' }, label_html: { class: 'upload-logo'}, label: 'ðŸ“· Upload an institutional logo (recommended but optional)' %>
        <%= image_tag "", width: 100, id: "logo-preview" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label"></label>
      <div class="col-md-9">
        <%= f.input :application_deadline, as: :date, html5: true, input_html: { value: (Time.now + 60.days).strftime('%Y-%m-%d'), min: Time.now.strftime('%Y-%m-%d'),
        max: (Time.now + 90.days).strftime('%Y-%m-%d')}, :label => "Duration of Job Post (The default is 60 days but you can have it posted 90 days)"  %>
      </div>
    </div>

    <br>
    <br>
    <div class="form-group">
      <div class="col-md-4">
        <%= f.button :submit, "Pay and Post the Job", class: "btn btn-md btn-block btn-success"%>
        <br>
        <p>You will pay securely through <%= link_to "Stripe", 'https://stripe.com', target:"_blank" %>, which is the most secure platform payments provider</p>
      </div>
    </div>
  </div>
<% end %>

